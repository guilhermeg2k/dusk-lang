

let power: fn = fn(base: number, exp: number) -> number
    if exp == 0
        return 1

    let x: number = exp % 2
    if x == 0
        let aux: number = exp/2
        let half: number = power(base, aux)
        return half * half

    let aux: number = exp - 1
    let p: number = power(base, aux)

    return base * p

echo(power(2, 0))
echo(power(2, 3))
echo(power(5, 2))
echo(power(3, 4))
