
let power: fn = (base: number, exp: number) -> number
    if exp == 0
        return 1

    let x: number = exp % 2
    if x == 0
        let half: number = power(base, exp / 2)
        return half * half

    return base * power(base, exp - 1)

echo(power(base=2, exp=0))
echo(power(2, 3))
echo(power(5, 2))
echo(power(3, 4))
